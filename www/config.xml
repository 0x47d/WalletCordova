<?xml version='1.0' encoding='utf-8'?>
<widget id="it.greenaddress.cordova" version="0.0.72" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GreenAddress</name>
    <description>
        GreenAddress Mobile Wallet
    </description>
    <preference name="loglevel" value="INFO" />
    <author email="info@greenaddress.it" href="https://greenaddress.it">
        GreenAddress IT Ltd
    </author>
    <content src="greenaddress.it/en/wallet.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="errorUrl" value="file:///android_asset/www/offline.html" />
    <preference name="SplashScreenDelay" value="10000" />
    <platform name="android">
        <splash density="land-hdpi" src="res/android/drawable-hdpi/splash_land.9.png" />
        <splash density="land-mdpi" src="res/android/drawable-mdpi/splash_land.9.png" />
        <splash density="land-xhdpi" src="res/android/drawable-xhdpi/splash_land.9.png" />
        <splash density="port-hdpi" src="res/android/drawable-hdpi/splash_land.9.png" />
        <splash density="port-mdpi" src="res/android/drawable-mdpi/splash_land.9.png" />
        <splash density="port-xhdpi" src="res/android/drawable-xhdpi/splash_land.9.png" />
        <icon density="ldpi" src="res/android/drawable-ldpi/icon.png" />
        <icon density="hdpi" src="res/android/drawable-hdpi/icon.png" />
        <icon density="mdpi" src="res/android/drawable-mdpi/icon.png" />
        <icon density="xhdpi" src="res/android/drawable-xhdpi/icon.png" />
    </platform>
    <plugin name="cordova-plugin-file" spec="https://github.com/apache/cordova-plugin-file.git" />
    <plugin name="cordova-plugin-media" spec="https://github.com/apache/cordova-plugin-media.git" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.0.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~2.1.0" />
    <plugin name="phonegap-nfc" />
    <plugin name="phonegap-plugin-barcodescanner" />
    <plugin name="cordova-plugin-app-preferences" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-network-information" />
    <plugin name="cordova-plugin-vibration" />
    <plugin name="it.greenaddress.cordova" spec="plugins/it.greenaddress.cordova" />
    <engine name="android" spec="~5.0.0" />
    <engine name="ios" spec="~3.9.0" />
</widget>
